catch_errors() {
  set -Eeuo pipefail
  trap 'error_handler $LINENO "$BASH_COMMAND"' ERR
}

# This function handles errors
error_handler() {
  
  local exit_code="$?"
  local line_number="$1"
  local command="$2"
  local error_message="Failure in line $line_number: exit code $exit_code: while executing command $command"
  echo -e "\n$error_message"
  exit "$error_message"
}
